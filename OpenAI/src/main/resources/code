# download openAI first: pip install openai
from openai import OpenAI
from pyexpat.errors import messages

client = OpenAI(
    base_url="http://localhost:11434/v1",
    # Secret key, cannot push to github.
    # If you want to get that key, please register in OpenAI web
    api_key=""
)

# response = client.chat.completions.create(
#     model="gemma2:2b",
#     messages=[
#         {
#             "role": "user",
#             "content": "Introduce me something about you"
#         }
#     ]
# )
# print("he")
# reply = response.choices[0].message.content
# print(reply)
messages = []
while True:
    user_input = input("You: ")
    if user_input == "exit":
        break
    messages.append(
        {
            "role": "user",
            "content": user_input
        })
    response = client.chat.completions.create(
        model="gemma2:2b",
        stream=True,
        messages=messages
    )
    bot_reply = ""
    for chunk in response:
        bot_reply += chunk.choices[0].delta.content or ""
        print(chunk.choices[0].delta.content or "", end="", flush=True)
    messages.append(
        {
            "role": "assistant",
            "content": bot_reply
        }
    )